spring:
  datasource:
    url: jdbc:h2:mem:db_dev;MODE=MySQL
  jpa:
    hibernate:
      ddl-auto: create-drop
  mail:
    host: localhost
    port: 1025
    properties:
      mail:
        smtp:
          auth: false
          starttls:
            enable: false
  data:
    redis:
      host: localhost
      port: 6379
  cache:
    type: redis

jwt:
  secret: "test-secret-key-for-jwt-tokens-1234567890-abcdefghijklmnopqrstuvwxyz"
  access-token-expiration: 1800000 # 30 minutes
  refresh-token-expiration: 604800000 # 7 days

auth:
  cookie:
    secure: false
    same-site: Lax
